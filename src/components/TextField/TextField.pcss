.TextField {
  display: flex;
  flex-direction: column;

  &__label {
    margin-bottom: 7px;
  }

  &__input {
    width: 300px;
    padding: 15px 17px 11px;
    border-radius: 4px;
    outline: none;
    border: 1px solid var(--border-color);
    font-size: 15px;
    line-height: 22px;
    color: var(--main-text-color);

    &:hover, &:focus {
      border-color: var(--primary-color);
      box-shadow: 0 0 2px 0 var(--primary-color);
    }
  }
}
