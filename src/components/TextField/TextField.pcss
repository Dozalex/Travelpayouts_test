.TextField {
  display: flex;
  flex-direction: column;
  width: 100%;

  &__label {
    margin-bottom: 7px;
  }

  &__input {
    padding: 14px 17px 10px;
    border-radius: 4px;
    outline: none;
    border: 1px solid var(--border-color);
    font-size: 15px;
    line-height: 22px;
    color: var(--main-text-color);

    &:hover, &:focus {
      border-color: var(--primary-color);
      box-shadow: var(--activeShadow);
    }
  }
}
